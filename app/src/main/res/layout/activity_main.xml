<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="烏龜"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar_t"
        android:layout_width="323dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        app:layout_constraintStart_toEndOf="@+id/tt"
        app:layout_constraintTop_toTopOf="@+id/tt" />

    <TextView
        android:id="@+id/rab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="兔子"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tt" />

    <SeekBar
        android:id="@+id/seekBar_r"
        android:layout_width="323dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        app:layout_constraintStart_toEndOf="@+id/rab"
        app:layout_constraintTop_toTopOf="@+id/rab" />

    <Button
        android:id="@+id/start_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="開始"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rab" />

</android.support.constraint.ConstraintLayout>